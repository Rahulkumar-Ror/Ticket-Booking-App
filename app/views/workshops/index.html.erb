<div class = "col-lg-12">

  <div class="fa fa-user">

  <button id="click">Hello!</button>
  <div data-controller="hello"></div>

  <%= link_to "cart", cart_path(@cart) %>
  <%= render "workshops/search" %>
  <div class="row">
  <div class="col-lg-9">
    <% @workshops.each do |workshop| %>
      <div class = "column is-one-quarter my-3">
        <div class="card ">
          <header class = "card-header my-3">
            <h4 class = "card-header-title"><%= workshop.name %></h4>
            <p style="color:red;">
                <span class="badge bg-danger">Uploaded</span> <span class="badge bg-success"> <%= time_tag workshop.created_at, "data-local":"time-ago" %>
              </span></p>  
              </header>
              <div class="card-content">
              <div class="content">
              <p class="lead"><%= truncate(workshop.description, length: 50) %></p>
                <h4><span class="badge bg-warning"><%= workshop.total_duration %></span></h4>
                <h4><span class="badge bg-success"> <%= workshop.daily_duration %></span></h4>
              <br><hr>
              <table>
              <tr>
              <%= link_to "View Details", workshop, class: "btn btn-success btn-md btn-sm" %> |
              <%= button_to "Delete Course", workshop_path(workshop.id), method: :delete, class: "btn btn-danger btn-md btn-sm" %> |
              <%= button_to "Edit Course", edit_workshop_path(workshop), method: :get, class: "btn btn-info btn-md btn-sm" %></h3>
              </tr>
              </table>
              
              <p><%= link_to 'add to cart', add_to_cart_path(workshop.id), method: :post %></p>

                <% if @cart.include?(workshop) %>
                  <%= button_to "Remove from cart", remove_from_cart_path(workshop), method: :delete %>
                <% else %>
                  <%= button_to "Add to cart", add_to_cart_path(workshop) %>
                <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>  
