<div class = "container-fluid text-center align-center" id =>
<div class = "col-lg-12 my-4 text-center">
  <div class="row">
  <div class="col-lg-9">
    <% @workshops.each do |workshop| %>
      <div class = "column is-one-quarter my-3">
      
        <div class="card border-success bg-light mb-3" style = "border-radius: 15px;" id="pw" >
          <header class = "card-header p-3 p-md-3 my-3" id= "dw">
            <h4 class = "card-header-title"><%= workshop.name %></h4>
            <p style="color:red;">
                <span class="badge bg-danger">Uploaded on</span> <span class="badge bg-success"> <%= time_tag workshop.created_at, "data-local":"time-ago" %>
              </span></p>  
              </header>
              <div class="card-content" id="contain">
              <div class="content">
              <p class="lead " ><%= truncate(workshop.description, length: 50) %></p>
                <h4><span class="badge bg-warning"><%= workshop.total_duration %></span></h4>
                <h4><span class="badge bg-success"> <%= workshop.daily_duration %></span></h4>
              <br><hr>
              <table>
              <tr class= "text-center">
              <%= button_to "View Details", workshop_path(workshop), method: :get, class: "btn btn-success btn-md btn-sm" %> |
              <%= button_to "Delete Course", workshop_path(workshop.id), method: :delete, class: "btn btn-danger btn-md btn-sm" %> |
              <%= button_to "Edit Course", edit_workshop_path(workshop), method: :get, class: "btn btn-info btn-md btn-sm" %></h3>
              </tr>
              </table>
              
              <p><% link_to 'add to cart', add_to_cart_path(workshop.id), method: :post %></p>

                <% if @cart.include?(workshop) %>
                  <% button_to "Remove from cart", remove_from_cart_path(workshop), method: :delete %>
                <% else %>
                  <% button_to "Add to cart", add_to_cart_path(workshop) %>
                <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>  
  <% link_to "cart", cart_path(@cart) %>
  <%= render "workshops/search" %>

  <style>
  #dw 
  {
    background-color: lightblue;
    height: 100px;
     box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1);
  }
  #pw{
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;  
    }

  #contain{
    text-decoration: none;
  font-size: 22px;
  color: black;
  }
  button {
 
  cursor: pointer;
  width: 30%;
  font-size: 18px;
}
  
.container {
  padding: 0px 100px;
}

</style>
