
<% @workshops.each do |workshop| %>
<div class="card" >
<% if workshop.clip.attached? %>
   <%= image_tag (workshop.clip), height: 200 %>
   <% end %>
  <h1><%= workshop.name %></h1>
  <p class="price"><i class=" fa fa-dollar"></i> <%= workshop.registration_fee %></p>
  <p><%= truncate(workshop.description, length: 50) %></p>
  <h4><span class="badge bg-warning"><%= workshop.total_duration %></span></h4>
  <h8> <%= workshop.daily_duration %></h8>
  <p><%= button_to "View Details", workshop_path(workshop), method: :get, class: "btn btn-success btn-md btn-sm" %></p>
</div>
<% form_with(url: cart_add_path) do |f| %>
  <%= f.hidden_field :id, value: workshop.id %>
  <%= f.number_field :quantity, value: 0, min: 1 %>
  <%= f.submit "Add to cart" %>
<% end %>
<% end %>

</div>


<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;

  max-width: 320px;
  margin: auto;
  text-align: center;
  font-family: arial;
  margin-bottom: 20px;
  margin-top: 20px;
}

.card:hover {
  box-shadow: 0 28px 86px 0 rgba(2,3,0,0.4);
}


.price {
  color: grey;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
  
}

.card button:hover {
  opacity: 0.7;
}
</style>







