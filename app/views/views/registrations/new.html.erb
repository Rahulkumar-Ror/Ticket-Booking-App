<div class="col-lg-6 mx-lg-auto my-5">
<div class="card shadow">
<div class="card-header">
  <h2 class="card-title text-center">Sign Up</h2>
</div>

<div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "abcde@gmail.com" , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :role %><br />
    <%= f.select :role, ['Admin', 'Customer'] %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "************", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "************" , class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary my-4" %>
  </div>
<% end %>
</div>
</div>
</div>



<%= render "devise/shared/links" %>
