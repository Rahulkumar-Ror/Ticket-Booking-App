<div class="col-lg-4 col-md-5 my-5 ">
  <div class="card show">
    <div class="card-body">
		  <%= form_with(model: @refund, html: { data: { turbo: false } }) do |form| %>
			  <div class="form-group mb-3"> 
				  <%= form.label :order_number, class: "form-label mb-2" %>
					<%= form.text_field :order_number, class: "form-control form-control-lg", required: true %>
				</div>
				<div class="form-group mb-3">
          <%= form.submit "Check Your Eligibility", class: "btn btn-primary btn-lg" %>
				</div>
			<% end %>
    </div>
  </div>
</div>
</div>
